<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil do Usuário</title>
    <!-- REMIX ICONS -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <div class="logo">Twitter</div>
    </header>
    <main>
      <div class="perfil">
        <h1>Perfil de <%= usuario.nome_User %></h1>
        <div class="foto-perfil">
          <img
            src="<%= usuario.foto_Perfil || '../images/perfis/userBOX.jpg' %>"
            alt="Foto de Perfil"
            style="border-radius: 50%"
          />
        </div>
        <% if (podeEditar) { %>
        <form
          action="/editar-foto-perfil"
          method="POST"
          enctype="multipart/form-data"
        >
          <p>Foto de Perfil:</p>
          <input type="file" name="novaFotoPerfil" accept="image/*" />
          <button type="submit">Salvar Foto de Perfil</button>
        </form>
        <% } %>
        <p>Apelido: <%= usuario.apelido_User %></p>
        <% if (podeEditar) { %>
        <form id="biografiaForm" action="/editar-biografia" method="post">
          <p>Biografia:</p>
          <input
            type="text"
            id="biografiaInput"
            name="novaBiografia"
            value="<%= usuario.biografia || 'No bio yet' %>"
            readonly
          />
          <span onclick="alternarEdicaoBiografia()">
            <i class="ri-pencil-line"></i>
          </span>

          <!-- Botão Salvar -->
          <button type="submit" id="btnSalvar" style="display: none">
            Salvar
          </button>
        </form>
        <% } else { %>
        <p>Biografia: <%= usuario.biografia || 'No bio yet' %></p>
        <% } %>
      </div>
      <div>
        <h2>Tweets de <%= usuario.nome_User %></h2>

        <% usuario.tweets.forEach((tweet) => { %>
        <strong>Tweet <%= tweet.idTweet %>:</strong>
        <p><%= tweet.texto_Tweet %></p>
        <% }) %>
      </div>
      <a href="/home">Home</a>
    </main>
    <script src="../scripts/userProfile.js"></script>
  </body>
</html>
