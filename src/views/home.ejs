<!-- PAGINA HOME -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Twitter Clone</title>
    <link rel="stylesheet" href="./styles/home.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <!-- menu -->
      <div class="option__menu">
        <div class="option__center">
          <div class="logo">
            <i class="ri-twitter-x-fill"></i>
          </div>
          <div class="option">
            <div>
              <a href="/home"><i class="ri-home-4-line"></i>Home</a>
            </div>
            <div>
              <a href="#"><i class="ri-notification-line"></i>Explore</a>
            </div>
            <div>
              <a href="#"><i class="ri-hashtag"></i>Notifications</a>
            </div>
            <div>
              <a href="#"><i class="ri-mail-line"></i>Messages</a>
            </div>
            <div>
              <a href="#"><i class="ri-bookmark-line"></i>Bookmarks</a>
            </div>
            <div>
              <a href="#"><i class="ri-list-check"></i>Lists</a>
            </div>
            <div>
              <a href="#"><i class="ri-user-line"></i>Profile</a>
            </div>
            <div>
              <a href="#"><i class="ri-more-line"></i>More</a>
            </div>
            <div id="tweetar">
              <% if (usuario) { %>
              <a href="/tweetar" class="tweetar">Postar</a>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Mini Card do Usuário -->
        <% if (usuario) { %>
        <script>
          const usuarioLogado = {
            foto_url:
              '<%= usuario.foto_url || "https://placekitten.com/40/40" %>',
            nome: "<%= usuario.nome_User %>",
          };
        </script>
        <div class="mini-card">
          <img
            src="<%= usuario.foto_url || 'https://placekitten.com/40/40' %>"
            alt="Imagem de perfil"
          />
          <div class="user-info">
            <span><%= usuario.nome_User %></span>
            <p>@<%= usuario.apelido_User %></p>
          </div>
        </div>
        <% } %>
      </div>
      <!-- end menu -->

      <!-- content menu -->
      <div class="content__menu">
        <div class="prefer">
          <span><a href="#">Para você</a></span>
          <span><i class="ri-star-line"></i></span>
        </div>

        <div class="tweets">
          <% tweets.forEach(tweet => { %>
          <div class="tweets__content">
            <div class="profile__msg">
              <div class="profile__img">
                <a href="/perfil/<%= tweet.user.idUser %>">
                  <img
                    src="https://placekitten.com/40/40"
                    alt="Imagem de gato 50x50"
                  />
                </a>
              </div>
              <div class="profile__msg__content">
                <div class="profile__name">
                  <a href="/perfil/<%= tweet.user.idUser %>">
                    <span
                      ><p><%= tweet.user.nome_User %></p>
                      @<%= tweet.user.apelido_User %></span
                    >
                  </a>
                </div>

                <div class="msg">
                  <p><%= tweet.texto_Tweet %></p>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <!-- end content menu -->

      <div class="rank">
        <p>Rank em manutenção :)</p>
      </div>
    </div>
    <script src="../scripts/home.js"></script>
  </body>
</html>
